{
 "properties": {
  "displayName": "PRXCSP - Require a billing tag on resources",
  "policyType": "Custom",
  "mode": "Indexed",
  "description": "Audits existence of a billing tag. Does not apply to resource groups.",
  "metadata": {
   "category": "Tags",
   "createdBy": "be208dc9-f286-419f-843c-4b9803957187",
   "createdOn": "2022-01-20T16:24:36.5075212Z",
   "updatedBy": "be208dc9-f286-419f-843c-4b9803957187",
   "updatedOn": "2022-01-26T14:32:52.2223049Z"
  },
  "parameters": {},
  "policyRule": {
   "if": {
    "anyOf": [
     {
      "field": "tags[Billing]",
      "notIn": [
       "Billable",
       "Non-Billable",
       "Non-Billable_Core"
      ]
     }
    ]
   },
   "then": {
    "effect": "audit"
   }
  }
 },
